// INFO :: START

section#info.info
  .c-grid
    .info__wrapper.info__wrapper-0
      .info__wrapper-left
        h1.info__title.title.viewport-hide-js(
        data-animation-name="slideInRight"
        )!= "Give your blockchain company an identity."
        p.info__text.viewport-hide-js(
        data-animation-name="slideInRight"
        data-animation-delay="0.3s"
        )!= "Get all the benefits of an in-wall or in-ceiling speaker system without any of the hassle. Just replace a few lights around your house, and start streaming crisp, clear audio, everywhere."
      .info__wrapper-right.viewport-hide-js(
      data-animation-name="slideInLeft"
      data-animation-delay="0.15s"
      )
        img.svg(src="./img/info.svg")

    .info__wrapper.info__wrapper-1
      .info__wrapper-left
        h1.info__title.title.viewport-hide-js(
        data-animation-name="slideInLeft"
        )!= "Tell your story. From the first block."
        p.info__text.viewport-hide-js(
        data-animation-name="slideInLeft"
        data-animation-delay="0.3s"
        )!= "Get all the benefits of an in-wall or in-ceiling speaker system without any of the hassle. Just replace a few lights around your house, and start streaming crisp, clear audio, everywhere."

      .info__wrapper-right.viewport-hide-js(
      data-animation-name="slideInRight"
      data-animation-delay="0.15s"
      )
        img(
        src="./img/img-device-info.png"
        srcset="./img/img-device-info@2x.png 2x"
        alt=""
        title=""
        )

