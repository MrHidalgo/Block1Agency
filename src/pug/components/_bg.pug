.bg
  if(contentClassName === "video" || contentClassName === "service")
    img.bg__img.bg__img--video.bg__img--video-0(
    src="./img/img-bg-parralax-video-0.png"
    srcset="./img/img-bg-parralax-video-0@2x.png 2x"
    alt=""
    title=""
    )
    img.bg__img.bg__img--video.bg__img--video-1(
    src="./img/img-bg-parralax-video-1.png"
    srcset="./img/img-bg-parralax-video-1@2x.png 2x"
    alt=""
    title=""
    )

    if(contentClassName === "service")
      img.bg__img.bg__img--service(
      src="./img/img-bg-parralax-statisticJoin-1.png"
      srcset="./img/img-bg-parralax-statisticJoin-1@2x.png 2x"
      alt=""
      title=""
      )

  if(contentClassName !== "service")
