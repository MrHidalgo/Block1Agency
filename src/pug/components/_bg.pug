    src="./img/img-bg-parralax-statisticJoin-1.png"
    srcset="./img/img-bg-parralax-statisticJoin-1@2x.png 2x"
    alt=""
    title=""
    )

  if(contentClassName === "contact")
    img.bg__img.bg__img--contact(
    src="./img/img-bg-parralax-contact-1.png"
    srcset="./img/img-bg-parralax-contact-1@2x.png 2x"
    alt=""
    title=""
    )
    img.bg__img.bg__img--contact(
    src="./img/img-bg-parralax-contact-0.png"
    srcset="./img/img-bg-parralax-contact-0@2x.png 2x"
    alt=""
    title=""
    )

  if(contentClassName === "home")
    img.bg__img.bg__img--home(
    src="./img/img-bg-parralax-home-1.png"
    srcset="./img/img-bg-parralax-home-1@2x.png 2x"
    alt=""
    title=""
    )
    img.bg__img.bg__img--home(
    src="./img/img-bg-parralax-home-0.png"
    srcset="./img/img-bg-parralax-home-0@2x.png 2x"
    alt=""
    title=""
    )

  img.bg__img.bg__img--statistic(
  src="./img/img-bg-parralax-statisticJoin.png"
